@inherits Umbraco.Web.Mvc.UmbracoViewPage


@{
    var selection = Umbraco.Content(Guid.Parse("465b4785-4a4c-47b2-8254-f11fb7dbe517"))
    .Children()
    .Where(x => x.IsVisible());
}
<header>
    <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand" href="/">Home</a>
        <ul class="navbar-nav">
            @foreach (var item in selection)
            {
                <li class="nav-item">
                    <a class="nav-link" href="@item.Url">@item.Name</a>
                </li>
            }
        </ul>
        <br />
        <ul class="nav navbar-nav navbar-right">
            @if (User.Identity.IsAuthenticated)
            {
                <li class="login-welcome">Welcome @User.Identity.Name </li>
                <li><a href="@Url.Action("Logout","Login")"> Logout</a></li>
            }
            else
            {
                <li><a href="/login"><i class="glyphicon glyphicon-log-in"></i> Login </a></li>
            }
        </ul>
    </nav>
</header>

